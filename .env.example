# RallyCal Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME=RallyCal
APP_VERSION=0.1.0

# Environment: development, testing, staging, production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - supports SQLite and PostgreSQL
# SQLite (development): sqlite+aiosqlite:///./rallycal.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/rallycal
DB_URL=sqlite+aiosqlite:///./rallycal.db

# Enable SQLAlchemy query logging (true/false)
DB_ECHO=false

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Number of worker processes (1 for development, adjust for production)
SERVER_WORKERS=1

# Enable auto-reload for development (true/false)
SERVER_RELOAD=true

# Log level: critical, error, warning, info, debug, trace
SERVER_LOG_LEVEL=info

# =============================================================================
# CALENDAR PROCESSING SETTINGS
# =============================================================================

# Path to calendar configuration YAML file
CALENDAR_CONFIG_FILE=config/calendars.yaml

# HTTP request timeout for calendar fetches (seconds)
CALENDAR_FETCH_TIMEOUT=30

# Number of retry attempts for failed requests
CALENDAR_RETRY_ATTEMPTS=3

# Cache TTL in seconds (3600 = 1 hour)
CALENDAR_CACHE_TTL=3600

# Maximum events to process per calendar source
CALENDAR_MAX_EVENTS_PER_CALENDAR=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for signing tokens (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECURITY_SECRET_KEY=dev-secret-key-change-in-production-must-be-at-least-32-characters

# Optional secret for validating Git webhooks
SECURITY_WEBHOOK_SECRET=

# Allowed CORS origins (comma-separated)
SECURITY_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting: requests per minute per IP
SECURITY_RATE_LIMIT_REQUESTS=100

# =============================================================================
# OPTIONAL: PRODUCTION DATABASE (PostgreSQL)
# =============================================================================

# Uncomment and customize for PostgreSQL in production
# DB_URL=postgresql+asyncpg://rallycal_user:your_password@localhost:5432/rallycal_prod
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# If using external logging service (e.g., Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# If using external monitoring
# MONITORING_ENDPOINT=https://your-monitoring-service.com/endpoint

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Development-specific settings
# ENVIRONMENT=development
# DEBUG=true
# SERVER_RELOAD=true
# DB_ECHO=true
# SERVER_LOG_LEVEL=debug